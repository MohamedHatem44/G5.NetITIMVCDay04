@model IEnumerable<Employee>

<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">Employee Id</th>
            <th scope="col">Employee Name</th>
            <th scope="col">Employee Age</th>
            <th scope="col">Employee Salary</th>
            <th scope="col">Department Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="col">@item.Id</th>
                <th scope="col">@item.Name</th>
                <th scope="col">@item.Age</th>
                <th scope="col">@item.Salary</th>
                <th scope="col">@item.Department!.Name</th>
                <th scope="col">
                    <a asp-controller="Employee" asp-action="ViewDetails" asp-route-id="@item.Id" class="btn btn-primary mx-2">View</a>
                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning mx-2">Edit</a>
                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">Delete</a>
                </th>
            </tr>
        }
    </tbody>
    <tfoot>
        <a asp-controller="Employee" asp-action="Create" class="btn btn-success">Add Employee</a>
    </tfoot>
</table>